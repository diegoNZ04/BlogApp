{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" placeholder="Título da Postagem" minlength="2" maxlength="50" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" placeholder="Slug da Postagem - Não são permitidas letras maiúsculas, números, espaços ou palavras com caracteres especiais, acentos ou ç" class="form-control" pattern="[a-z\s]+$" minlength="2" maxlength="250" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" placeholder="Descrição da Postagem" minlength="2" maxlength="500" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" placeholder="Conteúdo da Postagem" minlength="50" maxlength="2000" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
                </select>
                <br>
            <button class="btn btn-success mt-2" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>